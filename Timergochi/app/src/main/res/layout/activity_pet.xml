<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pet">

    <LinearLayout
        android:layout_width="394dp"
        android:layout_height="54dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:onClick="toTasks"
            android:tint="@android:color/darker_gray"
            app:srcCompat="@drawable/checkbox" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:onClick="toTimer"
            android:tint="@android:color/darker_gray"
            app:srcCompat="@drawable/timer" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:onClick="toPet"
            android:tint="@color/colorPrimary"
            app:srcCompat="@drawable/pet" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:onClick="toShop"
            android:tint="@android:color/darker_gray"
            app:srcCompat="@drawable/rewards" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:onClick="toRecord"
            android:tint="@android:color/darker_gray"
            app:srcCompat="@drawable/record" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>